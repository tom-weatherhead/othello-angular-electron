{
	"name": "othello-angular-electron",
	"description": "An Othello (Reversi) proof-of-concept application built on Angular, Bootstrap, Docker, and Electron.",
	"private": false,
	"version": "0.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/tom-weatherhead/othello-angular-electron.git"
	},
	"homepage": "https://github.com/tom-weatherhead/othello-angular-electron#readme",
	"bugs": {
		"url": "https://github.com/tom-weatherhead/othello-angular-electron/issues"
	},
	"main": "main.js",
	"scripts": {
		"all": "npm run clean && npm i && npm run test-all && npm start",
		"all-notests": "npm run clean && npm i && npm start",
		"clean": "rm -rf coverage && rm -rf dist && rm -rf node_modules && rm -f package-lock.json",
		"build": "npm i && npm start",
		"rebuild": "npm run clean && npm run build",
		"build-ng": "ng build",
		"build-ng-prod": "ng build --prod",
		"electron": "npm run electron-with-gpu",
		"electron-with-gpu": "electron .",
		"electron-without-gpu": "electron --disable-gpu .",
		"lint": "tslint ./src/**/*.ts -t verbose -p tsconfig.app.json -c tslint.json",
		"lintx": "ng lint",
		"unittests": "ng test --code-coverage",
		"unittests-headless": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
		"e2e": "ng e2e",
		"systemtests": "npm run e2e",
		"test-all": "npm run lint && npm run unittests-headless && npm run systemtests",
		"test-travis": "npm run test-all",
		"serve": "ng serve",
		"start": "npm run build-ng && npm run electron"
	},
	"dependencies": {
		"@angular/common": "^8.2.14",
		"@angular/compiler": "^8.2.14",
		"@angular/core": "^8.2.14",
		"@angular/forms": "^8.2.14",
		"@angular/platform-browser": "^8.2.14",
		"@angular/platform-browser-dynamic": "^8.2.14",
		"@angular/router": "^8.2.14",
		"@ng-bootstrap/ng-bootstrap": "^5.1.4",
		"bootstrap": "^4.3.1",
		"electron": "^8.2.2",
		"jquery": "^3.4.1",
		"node-sass": "^4.13.0",
		"popper.js": "^1.16.0",
		"thaw-angular-component-library": "^0.0.0",
		"thaw-common-utilities.js": "^0.0.27",
		"thaw-reversi-engine": "^0.2.0",
		"zone.js": "0.9.1"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^0.803.19",
		"@angular/cli": "^8.3.19",
		"@angular/compiler-cli": "^8.2.14",
		"@types/jasmine": "^3.5.0",
		"@types/jasminewd2": "^2.0.8",
		"@types/jquery": "^3.3.31",
		"@types/node": "^12.12.12",
		"chromedriver": "^78.0.1",
		"codelyzer": "^5.2.0",
		"jasmine-core": "^3.5.0",
		"jasmine-spec-reporter": "^4.2.1",
		"karma": "^4.4.1",
		"karma-chrome-launcher": "^3.1.0",
		"karma-coverage-istanbul-reporter": "^2.1.1",
		"karma-jasmine": "^2.0.1",
		"karma-jasmine-html-reporter": "^1.4.2",
		"protractor": "^5.4.2",
		"selenium-webdriver": "^4.0.0-alpha.5",
		"ts-node": "^8.5.2",
		"tslint": "^5.20.1",
		"typescript": "<3.6"
	},
	"engineStrict": true,
	"engines": {
		"node": ">= 10.9"
	},
	"keywords": [
		"Angular",
		"Bootstrap",
		"Docker",
		"Electron",
		"Othello",
		"PulseAudio",
		"Reversi",
		"TypeScript"
	],
	"author": "Tom Weatherhead <null@2hrd4u.org> (https://httpbin.org/status/418)",
	"license": "MIT"
}
